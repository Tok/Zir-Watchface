<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_growth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal|center_vertical"
    android:minHeight="34dp"
    android:orientation="horizontal"
    tools:context="zir.teq.wearable.watchface.config.select.main.style.GrowthSelectionActivity">

    <android.support.wear.widget.CircularProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_growth_current_stroke"
        android:layout_width="@dimen/list_item_circle_dim"
        android:layout_height="@dimen/list_item_circle_dim"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/shape_circle"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="horizontal" />

    <android.support.wear.widget.CircularProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_growth_grown_stroke"
        android:layout_width="@dimen/list_item_circle_dim"
        android:layout_height="@dimen/list_item_circle_dim"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/shape_circle"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/list_item_growth_text"
        style="@style/CheckboxListItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />
</LinearLayout>
