<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_alpha"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_list_margin"
    android:layout_marginTop="@dimen/list_item_list_margin"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="zir.teq.wearable.watchface.config.select.AlphaSelectionActivity">

    <android.support.wearable.view.CircledImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_alpha_cirlce"
        style="@style/ListItemCircleStyle"
        app:circle_border_color="@color/border_color"
        app:circle_border_width="@dimen/list_item_border_width"
        app:circle_radius="@dimen/list_item_circle_radius" />

    <TextView
        android:id="@+id/list_item_alpha_text"
        style="@style/CheckboxListItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />
</LinearLayout>