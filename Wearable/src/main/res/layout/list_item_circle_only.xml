<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zir_list_item_circle_only"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/zir_list_item_margin"
    android:layout_marginTop="@dimen/zir_list_item_margin"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.wear.widget.CircularProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/zir_list_item_circle_only_layout"
        android:layout_width="@dimen/list_item_circle_dim"
        android:layout_height="@dimen/list_item_circle_dim"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/shape_circle"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="horizontal" />
</LinearLayout>
