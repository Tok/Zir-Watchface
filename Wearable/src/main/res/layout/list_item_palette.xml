<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_palette"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:clickable="true"
    tools:context="zir.teq.wearable.watchface.config.select.GrowthSelectionActivity">

    <android.support.wearable.view.CircledImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_palette_first_cirlce"
        style="@style/MultiCircleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circle_border_color="@color/theme_item_circle_border_color"
        app:circle_border_width="5dp" />

    <android.support.wearable.view.CircledImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_palette_second_circle"
        style="@style/MultiCircleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circle_border_color="@color/theme_item_circle_border_color"
        app:circle_border_width="5dp" />

    <android.support.wearable.view.CircledImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_palette_third_circle"
        style="@style/MultiCircleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circle_border_color="@color/theme_item_circle_border_color"
        app:circle_border_width="5dp" />
</LinearLayout>
