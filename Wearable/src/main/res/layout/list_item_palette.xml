<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_palette"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_palette_list_margin"
    android:layout_marginTop="@dimen/list_item_palette_list_margin"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="zir.teq.wearable.watchface.config.select.main.style.GrowthSelectionActivity">

    <android.support.wear.widget.CircularProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_palette_first_cirlce"
        style="@style/ListItemPaletteCircleStyle"
        android:layout_width="@dimen/list_item_circle_dim"
        android:layout_height="@dimen/list_item_circle_dim"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/list_item_palette_circle_margin"
        android:background="@drawable/shape_circle"
        android:gravity="center"
        android:orientation="horizontal" />

    <android.support.wear.widget.CircularProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_palette_second_circle"
        style="@style/ListItemPaletteCircleStyle"
        android:layout_width="@dimen/list_item_circle_dim"
        android:layout_height="@dimen/list_item_circle_dim"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="@dimen/list_item_palette_circle_margin"
        android:layout_marginEnd="@dimen/list_item_palette_circle_margin"
        android:background="@drawable/shape_circle"
        android:gravity="center"
        android:orientation="horizontal" />

    <android.support.wear.widget.CircularProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_palette_third_circle"
        style="@style/ListItemPaletteCircleStyle"
        android:layout_width="@dimen/list_item_circle_dim"
        android:layout_height="@dimen/list_item_circle_dim"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="@dimen/list_item_palette_circle_margin"
        android:layout_marginEnd="0dp"
        android:background="@drawable/shape_circle"
        android:gravity="center"
        android:orientation="horizontal" />
</LinearLayout>
