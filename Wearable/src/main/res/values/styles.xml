<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonConfigurationStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableLeft">@drawable/main_icon_color</item>
        <item name="android:layout_marginBottom">@dimen/main_config_list_margin</item>
        <item name="android:layout_marginTop">@dimen/main_config_list_margin</item>
    </style>

    <style name="ListItemCircleStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:padding">@dimen/list_items_padding</item>
        <item name="android:drawablePadding">@dimen/list_items_padding</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListItemPaletteCircleStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:padding">@dimen/list_items_padding</item>
        <item name="android:drawablePadding">@dimen/list_items_padding</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListItemGrowthCircleStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="CheckboxListItemStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">fill_vertical</item>
    </style>

    <style name="ListItemCircleTextStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">fill_vertical</item>
    </style>
</resources>